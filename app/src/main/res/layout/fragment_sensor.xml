        <TextView
            android:text="Temperatur"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linAcc"
            android:layout_marginTop="16dp"
            android:id="@+id/temp_text" />

        <TextView
            android:text="***Temp***"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
